<!DOCTYPE html>
<html>
<head>
  <title>SecureSignInUpOut</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p id="notice"><%= notice %></p>

	<% if session[:user_id] %>
		<%= link_to 'Sign Out', session_url, :method => 'delete' %>
	<% else %>
		<%= link_to 'Sign Up', new_user_url %> or <%= link_to 'Sign In', new_session_url %>
	<% end %>

<%= yield %>

</body>
</html>
